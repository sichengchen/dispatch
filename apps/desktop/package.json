{
  "name": "@dispatch/desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:e2e": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test:types": "pnpm --filter @dispatch/db build && pnpm --filter @dispatch/lib build && pnpm --filter @dispatch/server build && pnpm --filter @dispatch/api build && tsc -p tsconfig.json --noEmit",
    "test:e2e": "DISPATCH_E2E=1 DISPATCH_SERVER_TIMEOUT_MS=30000 DISPATCH_DB_PATH=$PWD/.e2e/dispatch.db DISPATCH_SETTINGS_PATH=$PWD/.e2e/dispatch.settings.json DISPATCH_DISABLE_SCHEDULER=1 sh -c \"mkdir -p $PWD/.e2e && pnpm --filter @dispatch/db migrate && pnpm --filter @dispatch/db seed && pnpm run build:e2e && playwright test\""
  },
  "dependencies": {
    "@dispatch/api": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "rehype-highlight": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.5.4",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "playwright": "^1.58.1",
    "postcss": "^8.4.38",
    "shadcn": "^3.8.2",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
